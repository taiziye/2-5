<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeef4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <View style="@style/view_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/one_i"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home_page"/>

            <TextView
                android:id="@+id/one_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#666666"
                android:text="@string/home_page"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/two_i"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/record"/>

            <TextView
                android:id="@+id/two_t"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="@string/record"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/three_i"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/member_manage"/>

            <TextView
                android:id="@+id/three_t"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="@string/member"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/four_i"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/employee_manage"/>

            <TextView
                android:id="@+id/four_t"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="@string/employee"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/five_i"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/personal"/>

            <TextView
                android:id="@+id/five_t"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="@string/personal"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
