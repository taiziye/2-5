<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#efeef4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#535456">

        <Button
            android:id="@+id/commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="@string/confirm"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="@string/add_discount"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />
    </RelativeLayout>

    <View android:id="@+id/t2"
        android:layout_below="@id/top"
        style="@style/view_line_style" />

    <LinearLayout android:id="@+id/one"
        android:layout_below="@id/t2"

        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="@string/discount_type"
            android:layout_height="40dp" />

        <EditText android:id="@+id/discount_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:gravity="center|right"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:background="@null" />
    </LinearLayout>

    <View android:id="@+id/t1"
        android:layout_below="@id/one"
        style="@style/view_line_style" />

    <LinearLayout android:id="@+id/two"
        android:layout_below="@id/t1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="@string/discount"
            android:layout_height="40dp" />

        <EditText android:id="@+id/discount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:hint="输入90表示9.0折"
            android:background="@null" />
    </LinearLayout>

    <View
        style="@style/view_line_style"
        android:layout_below="@id/two" />

